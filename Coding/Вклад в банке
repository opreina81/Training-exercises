/*Гражданин  1 марта открыл счет в банке, вложив  1000 руб.
      Через каждый месяц размер вклада увеличивается на 2% от имеющейся суммы.
      Определить:
      1.за какой месяц величина ежемесячного увеличения вклада превысит 30 руб.;
      2.через сколько месяцев размер вклада превысит 1200 руб.*/

import java.util.*;

public class Main {
    public static void main(String[] args) {
            
      double vklad = 1000; //начальная сумма вклада
      double percent = 0.02; //ежемесячный процент
      double mounthPersent = vklad * percent; //ежемесячный доход
      double goal = 1200; //финансовая цель
      int mounth =0; // переменная для подсчета месяца промежуточного дохода
      int countMounth=0;//счетчик для подсчета месяцев
      double sum=0;// счетчик для подсчета процентов (без тела вклада)

      
      while (sum<=30){
        sum=sum + mounthPersent;
        mounth++;
      }
      System.out.println("За "+ mounth+ " месяц величина ежемесячного увеличения вклада превысит 30 руб.");
//      System.out.printf("За %d месяц величина ежемесячного увеличения вклада превысит 30 рублей и составит %.2f руб.\n", mounth, sum);
      
      while (vklad<=goal){
        vklad=vklad+mounthPersent;
        countMounth++;
              }
     System.out.println("Через "+countMounth+" месяцев размер вклада превысит 1200 руб.");
         }
}
