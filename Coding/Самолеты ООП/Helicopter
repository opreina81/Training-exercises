public class Helicopter extends Avia {
    
    int range; //flight range, kilometers
    
    public Helicopter(String company, String flight, int range){
        super(company, flight);
        this.range=range;
        
        if ((this.range >=0) && (this.range<=60)) {
            System.out.println("Choose another transport");
        }
        else if 
            ((this.range >60) && (this.range<=4632)) {
            System.out.println("Let 's fly");
        }
        else { 
            System.out.println("Invalid");}
    }
    
    public void saySlogan(){
        System.out.println("Small and fast!");
    }
}
